[Unit]
Description=Sovereign Paper Trader
After=network.target rentech-collector.service
Wants=rentech-collector.service

[Service]
Type=simple
User=root
WorkingDirectory=/root/validation
ExecStart=/usr/bin/python3 /root/validation/paper_trader.py
Restart=always
RestartSec=10

# Logging
StandardOutput=append:/root/validation/data/paper_trader.log
StandardError=append:/root/validation/data/paper_trader.log

[Install]
WantedBy=multi-user.target
