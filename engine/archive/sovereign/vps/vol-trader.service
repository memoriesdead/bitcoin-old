[Unit]
Description=Sovereign Volatility Trader (Straddle Strategy)
After=network.target rentech-collector.service
Wants=rentech-collector.service

[Service]
Type=simple
User=root
WorkingDirectory=/root/validation
ExecStart=/usr/bin/python3 /root/validation/volatility_trader.py
Restart=always
RestartSec=10

# Logging
StandardOutput=append:/root/validation/data/vol_trader.log
StandardError=append:/root/validation/data/vol_trader.log

[Install]
WantedBy=multi-user.target
