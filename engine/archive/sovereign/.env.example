# RenTech Integration Configuration
# ==================================
# Copy this file to .env and fill in your values.
# Never commit .env to version control!

# Trading Mode
# Options: paper, dry_run, sandbox, live
TRADING_MODE=paper

# Exchange Configuration (for dry_run/sandbox/live)
EXCHANGE_ID=binance
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_SECRET=your_secret_here
# EXCHANGE_PASSWORD=your_password_here  # Some exchanges need this (e.g., OKX)
EXCHANGE_SANDBOX=true  # Use testnet

# Telegram Bot (optional)
TELEGRAM_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_ENABLED=false

# Safety Limits
MAX_POSITION_USD=1000
MAX_EXPOSURE_USD=5000
MAX_DAILY_LOSS=200

# Trading Parameters
TRADING_SYMBOLS=BTC/USDT
POSITION_SIZE=0.01
